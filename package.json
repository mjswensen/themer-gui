{
  "name": "themer-gui",
  "productName": "Themer",
  "version": "0.1.3",
  "description": "A graphical UI for themer.",
  "main": "main/index.js",
  "author": "mjswensen",
  "repository": "git@github.com:mjswensen/themer-gui.git",
  "license": "MIT",
  "build": {
    "appId": "com.mjswensen.themer",
    "productName": "Themer",
    "fileAssociations": {
      "ext": "thmr",
      "name": "Themer",
      "description": "Themer theme"
    },
    "asar": false,
	"nsis": {
		"perMachine": true,
		"oneClick": false,
		"allowElevation": true,
		"allowToChangeInstallationDirectory": true
		},
		
    "publish": "github",
    "mac": {
      "category": "public.app-category.developer-tools"
		},
	"win": {
	  "target": "nsis"
		},
    "linux":{
	  "target": "tar.gz",
	  "category": "Development"
		}
	},
  "jest": {
    "moduleNameMapper": {
      "\\.css$": "identity-obj-proxy"
    }
  },
  "scripts": {
    "bundle": "webpack",
    "start": "yarn run bundle; concurrently \"watch 'yarn run bundle' renderer\" \"electron .\"",
    "test": "jest",
    "watch": "yarn run test -- --watch",
    "dist": "yarn run bundle; build"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-react": "^6.23.0",
    "concurrently": "^3.4.0",
    "css-loader": "^0.28.0",
    "electron": "1.6.10",
    "electron-builder": "^18.6.2",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.3",
    "postcss-cssnext": "^2.10.0",
    "postcss-loader": "^1.3.3",
    "style-loader": "^0.16.1",
    "watch": "^1.0.2",
    "webpack": "^2.3.3"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "color": "^1.0.3",
    "electron-updater": "^2.2.0",
    "lodash": "^4.17.4",
    "pn": "^1.0.0",
    "prettier": "^1.3.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "react-test-renderer": "^15.5.4",
    "react-transition-group": "^1.1.2",
    "recursive-copy": "^2.0.6",
    "redux": "^3.6.0",
    "themer": "^2.2.0",
    "themer-atom-syntax": "^1.0.0",
    "themer-colors-default": "^1.0.1",
    "themer-colors-night-sky": "^1.0.1",
    "themer-colors-one": "^1.0.1",
    "themer-hyper": "^2.0.0",
    "themer-iterm": "^1.0.1",
    "themer-slack": "^1.0.2",
    "themer-sublime-text": "^1.0.2",
    "themer-terminal": "^1.0.0",
    "themer-vim": "^2.2.3",
    "themer-vim-lightline": "^2.0.2",
    "themer-wallpaper-block-wave": "^1.0.2",
    "themer-wallpaper-octagon": "^1.0.2"
  }
}
